clear all;
rng(1,'twister');

% Select a value for theta and data size
theta=5;
N=100;

% Generate observations
error_var = 1;
G = ones(N,1);
y = G*theta + sqrt(error_var)*randn(N,1);

% ML estimate for theta
theta_ML = inv(transpose(G)*G)*transpose(G)*y

% Prior distribution parameters
theta_prior = 4
prior_var = 0.5;

% Posterior parameters
phi = transpose(G)*G + error_var/prior_var;
big_theta = transpose(G)*y + error_var/prior_var*prior_mean;
theta_MAP = inv(phi)*big_theta
post_var = error_var*inv(phi);

% Likelihood disribution
(transpose(y-G*x)*(y-G*x))/(2*

% Posterior distribution
x = [2:0.001:8];
y_post = normpdf(x,theta_MAP,sqrt(post_var));
y_prior = normpdf(x,prior_mean, sqrt(prior_var));
plot(x, y_post) 
hold on
plot(x, y_prior)
legend('Posterior','Prior')
hold off


